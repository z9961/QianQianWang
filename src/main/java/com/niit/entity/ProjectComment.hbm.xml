<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.niit.entity.ProjectComment" table="ProjectComment" schema="dbo" catalog="Qianqianwang">
        <composite-id>
            <key-property name="pid" column="Pid"/>
            <key-property name="uPhone" column="UPhone"/>
        </composite-id>
        <property name="pComment" column="PComment"/>
        <many-to-one name="projectByPid" class="com.niit.entity.Project" insert="false" update="false">
            <column name="Pid"/>
        </many-to-one>
        <many-to-one name="usersByUPhone" class="com.niit.entity.Users" insert="false" update="false">
            <column name="UPhone"/>
        </many-to-one>
    </class>
</hibernate-mapping>